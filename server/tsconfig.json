    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "./**/*",
  ]
}
